# Modules
background-m = ${xrdb:color8:#222}
background-m-alt = ${xrdb:color5:#222}

[bar/main]
monitor = ${env:MONITOR:eDP-1}
width = 88%
height = 30
offset-x = 6%
offset-y = 1.3%
;radius = 4.0
