LC_ALL=it_IT.UTF-8

# ================
# Default programs
# ================
EDITOR=/usr/bin/nvim

# ==================
# Additions to $PATH
# ==================
PATH="$HOME/.local/bin:/usr/local/bin:$PATH"
PATH="$PATH:$HOME/.ghcup/bin"

